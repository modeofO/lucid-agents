{
  "name": "@lucid-agents/core",
  "version": "1.6.0",
  "description": "Build typed agent HTTP apps",
  "repository": {
    "type": "git",
    "url": "https://github.com/daydreamsai/lucid-agents",
    "directory": "packages/core"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js",
      "default": "./dist/utils.js"
    },
    "./axllm": {
      "types": "./dist/axllm/index.d.ts",
      "import": "./dist/axllm/index.js",
      "default": "./dist/axllm/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "AGENTS.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "zod": "catalog:",
    "hono": "catalog:",
    "@lucid-dreams/agent-auth": "latest",
    "@lucid-dreams/client": "latest",
    "@lucid-agents/types": "workspace:*",
    "@lucid-agents/identity": "workspace:*",
    "@lucid-agents/payments": "workspace:*",
    "@lucid-agents/wallet": "workspace:*",
    "x402-fetch": "catalog:",
    "x402": "^0.7.1",
    "viem": "^2.38.5",
    "@ax-llm/ax": "^14.0.37",
    "@ax-llm/ax-tools": "^14.0.37"
  },
  "devDependencies": {
    "tsup": "catalog:",
    "typescript": "catalog:",
    "@lucid-agents/eslint-config": "workspace:*",
    "@lucid-agents/prettier-config": "workspace:*",
    "@lucid-agents/hono": "workspace:*"
  }
}
