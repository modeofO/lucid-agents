{
  "id": "identity",
  "name": "Agent with ERC-8004 Identity",
  "description": "Full-featured agent with ERC-8004 identity registration, payments, and trust metadata.",
  "onboarding": {
    "prompts": [
      {
        "key": "AGENT_DESCRIPTION",
        "type": "input",
        "message": "How would you describe your agent?",
        "defaultValue": "Verifiable agent with on-chain identity"
      },
      {
        "key": "AGENT_VERSION",
        "type": "input",
        "message": "What version should the agent start at?",
        "defaultValue": "0.1.0"
      },
      {
        "key": "AGENT_DOMAIN",
        "type": "input",
        "message": "What domain will host your agent?",
        "defaultValue": "agent.example.com"
      },
      {
        "key": "ENTRYPOINT_KEY",
        "type": "input",
        "message": "Name the default entrypoint",
        "defaultValue": "process"
      },
      {
        "key": "ENTRYPOINT_DESCRIPTION",
        "type": "input",
        "message": "Describe what the default entrypoint does",
        "defaultValue": "Processes input and returns a result."
      },
      {
        "key": "ENABLE_PAYMENTS",
        "type": "confirm",
        "message": "Configure x402 payments?",
        "defaultValue": true
      },
      {
        "key": "PAYMENTS_FACILITATOR_URL",
        "type": "input",
        "message": "Facilitator URL",
        "defaultValue": "https://facilitator.daydreams.systems",
        "when": { "key": "ENABLE_PAYMENTS", "equals": true }
      },
      {
        "key": "PAYMENTS_NETWORK",
        "type": "input",
        "message": "Payment network identifier (default: Base Sepolia)",
        "defaultValue": "base-sepolia",
        "when": { "key": "ENABLE_PAYMENTS", "equals": true }
      },
      {
        "key": "PAYMENTS_PAY_TO",
        "type": "input",
        "message": "Pay-to address",
        "defaultValue": "0xb308ed39d67D0d4BAe5BC2FAEF60c66BBb6AE429",
        "when": { "key": "ENABLE_PAYMENTS", "equals": true }
      },
      {
        "key": "PAYMENTS_DEFAULT_PRICE",
        "type": "input",
        "message": "Default price in base units",
        "defaultValue": "1000",
        "when": { "key": "ENABLE_PAYMENTS", "equals": true }
      },
      {
        "key": "ENTRYPOINT_PRICE",
        "type": "input",
        "message": "Set a price for the default entrypoint",
        "defaultValue": "{{PAYMENTS_DEFAULT_PRICE}}",
        "when": { "key": "ENABLE_PAYMENTS", "equals": true }
      },
      {
        "key": "RPC_URL",
        "type": "input",
        "message": "RPC URL (blockchain endpoint)",
        "defaultValue": "https://sepolia.base.org"
      },
      {
        "key": "CHAIN_ID",
        "type": "input",
        "message": "Chain ID",
        "defaultValue": "84532"
      },
      {
        "key": "AUTO_REGISTER",
        "type": "confirm",
        "message": "Auto-register on ERC-8004 registry if not found?",
        "defaultValue": true
      }
    ]
  }
}
