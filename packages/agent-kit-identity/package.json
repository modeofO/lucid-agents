{
  "name": "@lucid-agents/agent-kit-identity",
  "version": "1.3.0",
  "description": "ERC-8004 identity helpers for Lucid agent kit surfaces",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "examples",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepare": "bun run build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --build tsconfig.json && tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "viem": "^2.38.1"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "@lucid-agents/eslint-config": "workspace:*",
    "@lucid-agents/prettier-config": "workspace:*"
  }
}
